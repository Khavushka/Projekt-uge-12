block content
    script(src="./public/javascripts/page")
        div
    h1= title
    p Show tasks here
    main
        div.flex-container
            div#columns
                    each task in tasks
                        div.column To Do
                            div(draggable="true")
                                        div #{task.title}
                                        div #{task._id}
                                        div #{task.description}
                                        div #{task.expires}
                                        div #{task.pid}
                                        div #{task.priority}
                                        div #{task.status}
                                            div.delete
                                                a(href="/deleteTask/" + task._id) delete
