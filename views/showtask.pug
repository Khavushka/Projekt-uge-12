extends layout

block content
    script(src="./public/javascripts/page")
        div
    h1= title
    p Show tasks here
    main
        div
            div#columns
                    each task in tasks
                        div.column(draggable="true") To Do
                                        div #{task.title}
                                        div #{task._id}
                                        div #{task.description}
                                        div #{task.expires}
                                        div #{task.pid}
                                        div #{task.priority}
                                        div #{task.status}
                                            div.delete
                                                a(href="/deleteTask/" + task._id) delete
                        div.column(draggable="true") Doing
                                        div #{task.title}
                                        div #{task._id}
                                        div #{task.description}
